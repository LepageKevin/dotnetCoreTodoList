@model IEnumerable<TaskItem>

<table class="table">
    <thead>
        <th>Nom</th>
        <th>Description</th>
        <th>State</th>
        <th>Cat√©gorie</th>
        <th>Email</th>
        <th>Actions</th>
    </thead>
    <tbody>     
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.State</td>
                <td>@item.Category.Name</td>
                <td>@item.User</td>
                <td>
                    <button type="button" class="btn btn-default">
                        <a asp-controller="TaskItem" asp-action="AddTaskItemAsync"><span class="glyphicon glyphicon-pencil"></span></a>
                    </button>
                    <a class="btn btn-danger alert-danger" asp-controller="TaskItem" asp-action="Delete" asp-route-id="@item.ID"><span class="glyphicon glyphicon-remove-sign"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>